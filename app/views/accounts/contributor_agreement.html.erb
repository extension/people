<% @page_title = "Contributor and eXtension Business Agreement" %>

<div class="page-header">
  <h2><%= @page_title %></h2>
</div>

<%- if current_person -%>
  <% if !current_person.contributor_agreement.nil? %>
    <h3>Agreement Review Recorded</h3>
    <p><%= current_person.first_name %>, you have reviewed the eXtension Contributor and Business Agreement, indicating that you
      <% if current_person.contributor_agreement %>
        accepted
      <% else %>
        did not accept
      <% end %>
      the agreement on <%= display_time(current_person.contributor_agreement_at) %>.
    </p>
  <%- else -%>
    <h3>Review Agreement</h3>
    <p><%= current_person.first_name %> please review the eXtension Contributor and Business Agreement below and indicate whether you accept or do not accept this Agreement.   By not accepting the agreement, you will not be able to edit content in the eXtension collaborative publishing tools. However, you are still able to view and read all content.</p>
    <%= form_tag do -%>
      <fieldset>
      <%= submit_tag  'I ACCEPT', :class => 'submitbutton', :name=>"agreement_agree" %>
      <%= submit_tag  'I DO NOT ACCEPT', :class => 'submitbutton', :name=>"agreement_noagree" %>
    </fieldset>
    <%- end -%>
  <%- end -%>
  <hr/>
<%- end -%>
<%= render(:partial => 'contributor_agreement_core') %>
<hr/>
<%= render(:partial => 'contributor_agreement_learnmore') %>
