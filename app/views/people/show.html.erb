<% @page_title = "Profile for #{@person.fullname}" %>

<%= render(:partial => 'show_status_banner', locals: {person: @person}) %>

<div class="row">
  <div class="span7"> 
    <div class="row">
      <div class="span7">       
        <h2><%= @person.fullname %></h2>
      <%= render(:partial => 'profile_information', locals: {person: @person}) %>
      </div>
    </div>
  </div>
  <div class="span5">
    <div class='pull-right'>
     <ul class="nav nav-pills">
        <li><%= link_to('Activity',activity_person_path(@person)) %></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Settings<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to('Edit profile',edit_person_path(@person)) %></li>
            <%- if current_person == @person -%>
              <li><%= link_to('Change password',password_person_path(@person)) %></li>
              <li><%= link_to('Public profile',public_settings_person_path(@person)) %></li>
            <%- end -%>
          </ul>
      </ul>
    </div>
    <div class='clearfix'>
    </div> 

    <div class="well">
      <h4>Communities</h4>
      <%- if(@person.communities.count > 0) %>
      <ul class="unstyled">
        <%- @person.communities.each do |community| -%>
          <li><%= link_to(community.name, community) %> <small><%= community_connection_for_person(community, @person)%></small></li>
        <%- end -%>
      </ul>
      <%- else -%>
      <p>No community connections.</p>
      <%- end -%>
    </div>
    <div class="well">
      <h4>
        Social Network Connections 
        <%- if @person == current_person -%>            
          <small><%= link_to('change',change_social_networks_people_path) %></small>
        <%- end -%>
      </h4>
      <%- if(@person.social_networks.count > 0) %>
      <ul class="unstyled">
        <%- @person.social_networks.each do |network| -%>
          <li><%= social_network_link(network) %></li>
        <%- end -%>
      <%- else -%>
      <p>No social networking connections listed.</p>
      <%- end -%>
    </div>
  </div>
    
</div>