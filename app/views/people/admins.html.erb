<%- @page_title = "Administrative Roles" -%>

<div class="page-header">
  <h2><%= @page_title %></h2>
</div>

<div class="row">
  <div class="col-md-12">
    <%- Site.order(:label).all.each do |site| -%>
      <h3><%= site.label.capitalize %></h3>
      <%- personlist = Person.joins(:site_roles).where("site_id = ?",site.id).order(:last_name) -%>
      <table class="table table-striped">
      <%- personlist.each do |p| -%>
        <tr><td><%= link_to_person(p) -%></td></tr>
      <%- end -%>
      </table>
    <%- end -%>
  </div>
</div>
