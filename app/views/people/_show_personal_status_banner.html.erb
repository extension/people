<%- if(!current_person.email_confirmed?) -%>
<div class="row">
  <div class="col-md-12">
    <div class='alert alert-warning'>
     <h4>Your account is waiting email confirmation.</h4>
     <%- if !current_person.previous_email.blank? -%>
       <p>You changed your email from <%= current_person.previous_email %> to <%= current_person.email %> and have not yet confirmed your changed email address.</p>
     <%- else -%>
       <p>You changed your email to <%= current_person.email %> and have not yet confirmed your changed email address.</p>
     <%- end -%>
     <p><%= link_to('Learn more about email confirmation',accounts_pending_confirmation_path) -%></p>
    </div>
  </div>
</div>
<%- end -%>
