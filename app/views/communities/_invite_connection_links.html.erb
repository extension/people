<%- if(person.connection_with_community(community) == 'none') -%>
<ul class='unstyled'>
<li><%= change_connection_link(community,person,'invitedmember') %></li>
</ul>
<%- elsif(person.connection_with_community(community) == 'invitedmember') -%>
<ul class='unstyled'>
<li><%= remove_connection_link(community,person) %></li>
</ul>
<%- else -%>
<ul class='unstyled'>
<li>&nbsp;</li>
</ul>
<%- end -%>