<dl class='community'>
  <% communitylist.each do |community| %>
  <dt><%= link_to(community.name,community_url(community)) %></dt>
  <dd class='type'><%= community.entrytype_to_s %> - <%= community.memberfilter_to_s %> - <%= link_to("#{community.joined_count} Joined", connections_community_path(community, :connection => 'joined')) %></dd>
  <dd class='description'><%= community.description.blank? ? 'No description' : community.description.html_safe %></dd>
  <%- end -%>
</dl>
