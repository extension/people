<% @page_title = "Session Information" %>

  <h2>Request Information</h2>
  <table class='table'>
    <tr>
      <td>Subdomain</td>
      <td><%= request.subdomain %></td>
    </tr>
  </table>

<%- if !session -%>
  <h2>No session data</h2>
<%- else -%>
  <h2>Your Session Information</h2>
  <table class='table'>
    <%- session.each do |key,value|%>
      <tr>
        <td><%= key %></td>
        <td><%= value %></td>
      </tr>
     <%- end -%>
     <td>request_ip</td>
     <td><%= request.remote_ip %></td>
  </table>
<%- end -%>
